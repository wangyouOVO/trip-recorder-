/* pages/index/detail.wxss */
.detail {
  display: flex;
  width: 100vh;
  justify-content: center;
  flex-wrap: wrap;
}

.introimg {
  width: 800rpx;
  height: 500rpx;
}

.pic {
  width: 100%;
}

.name {
  justify-content: flex-start;
  width: 100%;
  margin-left: 20rpx;
}

.rate {
  width: 95%;
  margin-top: 10rpx;
  font-weight: 600;
  font-size: 60rpx;
  color: rgb(168, 12, 12);
  text-shadow: 5rpx 5rpx 5rpx rgba(0, 0, 0, 0.15);
}

.rate-text {
  position: absolute;
  top: 520rpx;
  right: 90rpx;
  transform: rotate(10deg);
}

.time {
  width: 100%;
  margin-top: 30rpx;
  margin-left: 30rpx;
  flex-wrap: nowrap;
}

.preorder {
  position: relative;
  top: 0;
  left: 0;
  height: 55rpx;
  width: 55rpx;
}

.pre {
  display: flex;
  margin-right: 505rpx;
  border-radius: 10rpx;
  height: 55rpx;
  width: 100%;
  margin-top: 20rpx;
}

.ord {
  position: relative;
  top: 0;
  left: 20px;
  font-weight: border;
  color: #50557A;
}

.addr {
  position: relative;
  top: 25rpx;
  left: 30rpx;
  font-weight: border;
  color: #50557A;
}

.de {
  width: 100%;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.15);
  height: 320rpx;
}

.ticket {
  width: 95%;
  margin: 10rpx auto;
  border-radius: 20rpx;
  height: 200rpx;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.15);
  background-color: white;
}

.type {
  margin: 30rpx;
  font-weight: 600;
}

.orde {
  border-radius: 20rpx;
  background-color: coral;
  color: white;
}

.but {
  display: flex;
  justify-content: flex-end;
  width: 100%;
}
@keyframes order-button{
  0%{
    transform: scale(1);
  }
  50%{
    transform: scale(1.05);
  }
  100%{
    transform: scale(1);
  }
}
.button {
  margin-right: 30rpx;
  margin-left: 30rpx;
  animation-name: order-button;
  animation-duration: 1s;
  animation-iteration-count: infinite;
}

.price {
  position: relative;
  top: 0;
  left: -50rpx;
  font-weight: 600;
  font-size: 55rpx;
  text-shadow: 10rpx 10rpx 10rpx rgba(0, 0, 0, 0.15);
  color: rgb(168, 12, 12);
}

.sharing {
  margin-top: 20rpx;
}

.share {
  background-color: green;
  color: white;
}

.al {
  display: flex;
  flex-direction: row;
}

.bl {
  margin-right: 20rpx;
}

.dot {
  position: relative;
  top: 20rpx;
  /* left: 30rpx; */
  width: 60rpx;
  height: 60rpx;
}

.ad {
  display: flex;
  flex-direction: row;
}

.ic {
  margin-top: 20rpx;
  margin-right: 30rpx;
}
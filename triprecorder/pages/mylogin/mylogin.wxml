<view class="v1" style="height:{{clientHeight?clientHeight+'px':'auto'}}">
<!-- <view class="v1"> -->

  <!-- v2父容器  子view使用绝对布局 -->
  <view class="v2">
    <view class="login-container">
      <view class="login-text"> 登录</view>
    </view>
    <!-- 账号 -->
    <view class="userName">
      <input placeholder=" 请输入用户名" type="text" placeholder-class="usericon" bindinput="content" />
    </view>
    <!-- 密码 -->
    <view class=passWord">
        <input placeholder=" 请输入密码" placeholder-class="pwdicon"  type="password" bindinput="password" />
    </view>
    <!-- 登录按钮 -->
    <view class="login-button">
      <button class="btn-login" bindtap="userlogin">登录</button>
      <view class="register">
    <navigator url="/pages/register/register">没有账号？立即注册！</navigator>
    </view>
    </view>

  </view>
</view>
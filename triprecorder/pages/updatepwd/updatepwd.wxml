<!--pages/updatepwd/updatepwd.wxml-->
<view class="v1" style="height:{{clientHeight?clientHeight+'px':'auto'}}">
<view class="v2">
  <view class="update-container">
    <view class="update-text"> 修改密码</view>
  </view>
  <view class="oldPwd">
    <input placeholder=" 请输入原密码" type="password" placeholder-class="pwdicon" bindinput="oldpwd" />
  </view>
  <!-- 密码 -->
  <view class=passWord">
    <input placeholder=" 请输入新密码" placeholder-class="pwdicon" type="password" bindinput="newpwd" />
  </view>
  <view class="confirpassWord">
    <input placeholder=" 请再次输入新密码" placeholder-class="pwdicon" type="password" bindinput="confirnewpwd" />
  </view>
  <view class="update-button">
    <button class="btn-update" bindtap="userupdate">修改</button>
    <view class="back">
      <view bindtap="back">不想改了？返回主页！</view>
    </view>
  </view>
</view>
</view>